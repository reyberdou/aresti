	%body
		.container
			%nav
				.wrapper
					/ navigation
					.grid
						.cols-1-3
							%a{:href => "index.html"}
								.logo Aresti Logo
							.twitter @twitterhandle
						.cols-2-3
							%ul
								%li
									%a{:href => "index.html"}Inicio
								%li
									%a{:href => "about.html"}Acerca
								%li
									%a{:href => "products.html"}Productos
								%li
									%a{:href => "budget.html"}Presupuesta
								%li
									%a.selected_page{:href => "contact.html"}Contacto
			#message
				.wrapper
					/ slider
					.grid
						%h2
							Contacta a nuestro equipo de expertos
			.wrapper
				/ content
				.grid
					/ big area of content
					.cols-2-3
						.grid.grid-pad.border-right
							.cols-1-1
								%h6
									Hola
